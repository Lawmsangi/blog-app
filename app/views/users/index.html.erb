<div class="container">
   <% @users.each do |user| %>
    <div class="users-container">
      <div class="users-image">
        <img src="<%= user.photo %>" alt="<%= user.name %>">
      </div>
      <div class="users-info">
         <h2><%= link_to user.name, user_path(user) %></h2>
         <p>Number of posts:<%= user.posts_counter %></p>
      </div>
    </div>
<% end %>
</div>